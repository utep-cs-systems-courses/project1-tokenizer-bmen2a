# make ObJ to of Object files
OBJS=tester.o tokens.o history.o tokenizer.o

#default rule how to buil an object file (.o)
#	 this rule include CFLAGS as one of cc's param
CFLAGS= -g -03 #-g for debug, -03 for optimizations

#first target is built by default. Usually name "all"
all: bmTokens

#bmTokens(target0 depends on all object files(prequisites)
bmTokens: $(OBJS)
	cc -o bmTokens $(CFLAGS) $(OBJS) #tab is necessary here

#all obj files from c files that include tokenizer.h
$(OBJS):tokenizer.h

#deleted files generated by compilation

clean:
	rm -f *.o bmTokens
run:bmTokens
	./bmTokens
